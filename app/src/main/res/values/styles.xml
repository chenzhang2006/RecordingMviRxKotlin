<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Recordings.CollapsingToolbar" parent="">
        <item name="collapsedTitleTextAppearance">@style/TextAppearance.Recordings.Title</item>
        <item name="contentScrim">?attr/colorPrimary</item>
        <item name="expandedTitleGravity">top</item>
        <item name="expandedTitleMarginStart">96dp</item>
        <item name="expandedTitleMarginTop">64dp</item>
        <item name="expandedTitleTextAppearance">@style/TextAppearance.Recordings.Title</item>
        <item name="scrimVisibleHeightTrigger">140dp</item>
    </style>

    <style name="TextAppearance.Recordings.Title" parent="TextAppearance.AppCompat.Display3">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Recordings.CollapsingToolbarContent" parent="">
        <item name="android:layout_marginTop">96dp</item>
        <item name="android:layout_marginLeft">96dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextAppearance.Recorder.Usage" parent="TextAppearance.AppCompat.Display3">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.Recording.ActionButton" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.RecordingItem.title" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="TextAppearance.RecordingItem.time" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/darkerText</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.RecordingItem.description" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/textColor</item>
    </style>

</resources>
