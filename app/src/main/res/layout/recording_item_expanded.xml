<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

    <TextView
            android:id="@+id/expandedRecordingTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/expandedDelete"
            android:textSize="24sp"
            />

    <TextView
            android:id="@+id/expandedRecordingDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expandedRecordingTitle"
            android:layout_marginTop="16dp"
            app:layout_goneMarginTop="0dp"
            android:textSize="20sp"
            />

    <ImageView
            android:id="@+id/expandedDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/expandedRecordingTitle"
            app:layout_constraintBottom_toBottomOf="@+id/expandedRecordingTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_remove"
            android:contentDescription="@string/content_desc_remove"/>

    <Button
            android:text="@string/play_button_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/expandedPlay"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/expandedRecordingDesc"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/TextAppearance.Recording.ActionButton"
            />
</android.support.constraint.ConstraintLayout>