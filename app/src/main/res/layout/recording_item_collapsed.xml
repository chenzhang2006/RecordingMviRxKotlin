<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

    <TextView
            android:id="@+id/collapsedRecordingTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/collapsedDelete"
            android:layout_marginEnd="16dp"
            android:textSize="24sp"
            />

    <ImageView
            android:id="@+id/collapsedDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/collapsedRecordingTitle"
            app:layout_constraintBottom_toBottomOf="@+id/collapsedRecordingTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_remove"
            android:contentDescription="@string/content_desc_remove"/>
</android.support.constraint.ConstraintLayout>